@page "/"
@using System.Text.Json.Nodes
@using ClientWS.Services
@using Common.Model
@inject WebSocketService WebSocketService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<div>
    @foreach (var msg in messages)
    {
        <div>@msg</div>
    }
</div>
<div>
    <input @bind="message" placeholder="Escribe un message" />
    <button @onclick="SendMessage">Enviar</button>
</div>


@code{

    List<string> messages = new List<string>();
    private string message = string.Empty;
    
    protected override async Task OnInitializedAsync()
    {
        await WebSocketService.ConnectAsync("ws://localhost:5247/ws");
        WebSocketService.SetProcessMessage(ProcessMessage);
        await Task.Run(ReceiveMessages);
    }
    
    private async Task SendMessage()
    {
        if (string.IsNullOrEmpty(message)) return;

        JsonObject data = new JsonObject
        {
            ["message"] = message,
            ["from"] = "Client"
        };
        Message messageToWs = new Message(MessageType.SendMessage, data);
     
        await WebSocketService.SendMessageAsync(messageToWs);
        message = string.Empty;
    }
    
    private async Task ReceiveMessages()
    {
        while (true)
        {
            try
            {
                await WebSocketService.ReceiveMessageAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error receiving message: {ex.Message}");
                break;
            }
        }
    }
    
    private async Task ProcessMessage(string payload)
    {
        var msg = new Message(payload);
        if (msg.MessageType == MessageType.SendMessage)
        {
            Console.WriteLine("Soy el process message 1");
            var msgContent = msg.Data["message"]?.ToString();
            if (!string.IsNullOrEmpty(msgContent))
            {
                messages.Add(msgContent);
                StateHasChanged();
            }
            Console.WriteLine("Seteo process message 2");
            WebSocketService.SetProcessMessage(ProcessMessage2);
        }
    }
    
    private async Task ProcessMessage2(string payload)
    {
        var msg = new Message(payload);
        if (msg.MessageType == MessageType.SendMessage)
        {
            Console.WriteLine("Soy el process message 2");
            var msgContent = msg.Data["message"]?.ToString();
            if (!string.IsNullOrEmpty(msgContent))
            {
                messages.Add(msgContent);
                StateHasChanged();
            }
            Console.WriteLine("Seteo process message 1");
            WebSocketService.SetProcessMessage(ProcessMessage);
        }
    }

}